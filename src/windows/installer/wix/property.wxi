<Include xmlns="http://wixtoolset.org/schemas/v4/wxs">

    <!-- Important:  This product should only be installed in all-user mode -->
    <Property Id="ALLUSERS" Value="1" />

    <Property Id="LEASHAUTOINIT" Admin="yes" Secure="yes" Value="-autoinit" />
    <Property Id="LEASHAUTOSTART" Admin="yes" Secure="yes" Value="1" />
    
    <Property Id="ARPCOMMENTS" Value="$(var.ARPComments)" />
    <Property Id="ARPCONTACT" Value="kerberos@mit.edu" />
    <Property Id="ARPURLINFOABOUT" Value="https://web.mit.edu/kerberos" />
    <Property Id="ARPHELPLINK" Value="https://web.mit.edu/kerberos" />
    <Property Id="INSTALLLEVEL" Value="50" />
    <Property Id="ComponentDownload" Value="https://web.mit.edu/kerberos" />

    <Property Id="UPGRADENSIS">
        <RegistrySearch Id="regsrch_NSIS" Root="HKLM" Key="Software\Microsoft\Windows\CurrentVersion\Uninstall\Kerberos for Windows" Name="UninstallString" Type="raw" Bitness="always32" />
    </Property>
    
    <Property Id="NSISVERSION">
        <RegistrySearch Id="regsrch_NSISV" Root="HKLM" Key="Software\Microsoft\Windows\CurrentVersion\Uninstall\Kerberos for Windows" Name="DisplayVersion" Type="raw" Bitness="always32" />
    </Property>

    <Property Id="CantRemoveNSISError" Value="!(loc.CantRemoveNSIS)" />
    <Property Id="NoIE501Error" Value="!(loc.IE501Required)" />

    <!--  Additional properties relating to the UI are in the appropriate UI.wxi file -->
    
    <!-- Configuration properties.  If these properties are defined, then
         the corresponding component will be enabled. If the corresponding
         variable value is the empty string (""), then the properties will
         not be defined. -->
<?ifdef UseDefaultProperties?>
    <Property Id="LEASHCREATEMISSINGCONFIG" Admin="yes" Secure="yes" Value="$(var.LeashCreateMissingConfig)" />
    <Property Id="LEASHAUTORENEWTICKETS" Admin="yes" Secure="yes" Value="$(var.LeashAutoRenewTickets)" />
    <Property Id="LEASHLIFETIME" Admin="yes" Secure="yes" Value="$(var.LeashLifetime)" />
    <Property Id="LEASHRENEWTILL" Admin="yes" Secure="yes" Value="$(var.LeashRenewTill)" />
    <Property Id="LEASHRENEWABLE" Admin="yes" Secure="yes" Value="$(var.LeashRenewable)" />
    <Property Id="LEASHFORWARDABLE" Admin="yes" Secure="yes" Value="$(var.LeashForwardable)" />
    <Property Id="LEASHNOADDRESSES" Admin="yes" Secure="yes" Value="$(var.LeashNoAddresses)" />
    <Property Id="LEASHPROXIABLE" Admin="yes" Secure="yes" Value="$(var.LeashProxiable)" />
    <Property Id="LEASHPUBLICIP" Admin="yes" Secure="yes" Value="$(var.LeashPublicIp)" />
    <Property Id="LEASHHIDEKINITOPTIONS" Admin="yes" Secure="yes" Value="$(var.LeashHideKinitOptions)" />
    <Property Id="LEASHLIFEMIN" Admin="yes" Secure="yes" Value="$(var.LeashLifeMin)" />
    <Property Id="LEASHLIFEMAX" Admin="yes" Secure="yes" Value="$(var.LeashLifeMax)" />
    <Property Id="LEASHRENEWMIN" Admin="yes" Secure="yes" Value="$(var.LeashRenewMin)" />
    <Property Id="LEASHRENEWMAX" Admin="yes" Secure="yes" Value="$(var.LeashRenewMax)" />
    <Property Id="LEASHUPPERCASEREALM" Admin="yes" Secure="yes" Value="$(var.LeashUppercaseRealm)" />
    <Property Id="LEASHTIMEHOST" Admin="yes" Secure="yes" Value="$(var.LeashTimeHost)" />
    <Property Id="LEASHPRESERVEKINITOPTIONS" Admin="yes" Secure="yes" Value="$(var.LeashPreserveKinitOptions)" />
    <Property Id="KRB5CONFIG" Admin="yes" Secure="yes" Value="$(var.Krb5Config)" />
    <Property Id="KRB5CCNAME" Admin="yes" Secure="yes" Value="$(var.Krb5CcName)" />
    <Property Id="KRB5PRESERVEIDENTITY" Admin="yes" Secure="yes" Value="$(var.Krb5PreserveIdentity)" />
<?endif?>
<?ifdef UseLeash?>
    <Property Id="USELEASH" Admin="yes" Secure="yes" Value="$(var.UseLeash)" />
<?endif?>
<?ifdef UseNetIDMgr?>
    <Property Id="USENETIDMGR" Admin="yes" Secure="yes" Value="$(var.UseNetIDMgr)" />
<?endif?>
</Include>
